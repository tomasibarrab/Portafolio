<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime('%B %d, %Y')%></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>

	<div id="content">
		<p><%= markdown @post.content %></p>
	</div>
	<hr>
	<%if user_signed_in?%>
		<div id="admin_links">
			<%=link_to 'Edit', edit_post_path(@post)%>
			<%=link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"}%>
		</div>
	<%end%>
	
	<div id="share_box">
		<p>Share: <%= @post.title %></p>
		<!--Twitter-->
		<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title%> by @tomasibarrab - &amp;url=<%=url_for([@post, {only_path: false}])%>', '_blank', 'width=800, height=256, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
		<!--Facebook-->
		<a onclick="javascript:window.open('http://facebook.com/share.php?u=<%=url_for([@post, {only_path: false}])%>', '_blank', 'width=800, height=450, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
	</div>
	<hr>
	<%= render 'disqus'%>
</div>

